generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model comment {
  id           Int      @id @default(autoincrement())
  userId       Int
  postId       Int
  content      String
  creationDate DateTime @default(now())

  @@index([postId], map: "Comment_postId_fkey")
  @@index([userId], map: "Comment_userId_fkey")
}

model follow {
  id         Int @id @default(autoincrement())
  userId     Int
  followerId Int

  @@unique([userId, followerId], map: "Follow_userId_followerId_key")
  @@index([followerId], map: "Follow_followerId_fkey")
}

model like {
  id     Int @id @default(autoincrement())
  userId Int
  postId Int

  @@index([postId], map: "Like_postId_fkey")
  @@index([userId], map: "Like_userId_fkey")
}

model post {
  id           Int      @id @default(autoincrement())
  userId       Int
  content      String
  image        String?
  creationDate DateTime @default(now())

  @@index([userId], map: "Post_userId_fkey")
}

model user {
  id       Int     @id @default(autoincrement())
  name     String  @unique(map: "User_name_key")
  email    String  @unique(map: "User_email_key")
  password String
  picture  String?
  isAdmin  Boolean @default(false)
}
